<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!--This is for the drawer menu layout-->
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="250dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF">

        <include layout="@layout/menu_layout"></include>

    </LinearLayout>

    <!-- This is for the contain main activity -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <!-- This is for toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/toolbarID">

            <include layout="@layout/toolbar"></include>

        </LinearLayout>

        <!-- This is for Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/forContentBelowToolbar"
            android:background="#dfe8f1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Main Linear Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#dfe8f1">

                    <!--Personal Detail Label -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_margin="10dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">
                        <TextView
                            android:id="@+id/TimesheetLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/timeSheet_txt"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:textColor="#1976d2"/>
                    </RelativeLayout>

                    <!--Profile Timesheet -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:layout_margin="10dp"
                        android:background="@color/white">

                        <!--Timesheet Profile With User Image -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_user"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Jhon Rhoe"
                                    android:textColor="#1976d2"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="20161107"
                                        android:textColor="#b1b1b1"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="UI Lead"
                                        android:paddingLeft="10dp"
                                        android:textColor="#b1b1b1"/>

                                </LinearLayout>

                            </LinearLayout>

                            <!--End of Timesheet Profile With User Image-->
                        </LinearLayout>

                        <!-- Time Group and Join Date-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!--Time Group-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="20dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="TIME GROUP"
                                    android:gravity="center"
                                    android:textColor="#333333"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="TG01"
                                    android:textColor="#333333"/>

                            </LinearLayout>

                            <!--Join Date-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="20dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="JOIN DATE"
                                    android:textColor="#333333"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="01/01/2018"
                                    android:textColor="#333333"/>

                            </LinearLayout>

                            <!--End of Time Group and Join Date-->
                        </LinearLayout>

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="3">
                            <!--Column 1-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="80%"
                                    android:textSize="30sp"
                                    android:textColor="#333333"
                                    android:gravity="center"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="From Join"
                                    android:gravity="center"
                                    android:textColor="#333333"/>

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ON TIME"
                                    android:textColor="@color/white"
                                    android:background="#4caf50"
                                    android:gravity="center"
                                    android:layout_margin="2dp"
                                    />

                            </LinearLayout>

                            <!--Column 2-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="20%"
                                    android:textSize="30sp"
                                    android:textColor="#333333"
                                    android:gravity="center"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="From Join"
                                    android:gravity="center"
                                    android:textColor="#333333"/>

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="lATE"
                                    android:textColor="@color/white"
                                    android:background="#f44f44"
                                    android:layout_margin="2dp"
                                    android:padding="0dp"/>

                            </LinearLayout>

                            <!--Column 3-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="15%"
                                    android:textSize="30sp"
                                    android:textColor="#333333"
                                    android:gravity="center"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="From Join"
                                    android:gravity="center"
                                    android:textColor="#333333"/>

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="EARLY OUT"
                                    android:textColor="@color/white"
                                    android:background="#f5a623"
                                    android:layout_margin="2dp"/>

                            </LinearLayout>
                        </GridLayout>

                        <!--End of Profile Timesheet -->
                    </LinearLayout>

                    <!--Search -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#f5f5f5"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SEARCH"
                            android:paddingLeft="5dp"
                            android:textColor="#333333"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start Date From"
                            android:paddingLeft="5dp"
                            android:textColor="#333333"/>

                        <!--For Search Calender -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <!-- Start Date Label -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_startDate_SEARCH"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="dd-MM-yyyy"
                                    android:textColor="#1976d2"
                                    android:paddingLeft="5dp"
                                    android:gravity="center_vertical"/>

                                <ImageView
                                    android:id="@+id/startDate_SEARCH_image"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@android:drawable/ic_menu_my_calendar"
                                    android:paddingLeft="10dp"/>

                            </LinearLayout>


                            <!-- to -->
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="to"
                                    android:paddingLeft="5dp"
                                    android:textColor="#333333"
                                    android:gravity="center_vertical"/>

                            </RelativeLayout>


                            <!-- End Date Label -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_endDate_SEARCH"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="dd-MM-yyyy"
                                    android:textColor="#1976d2"
                                    android:paddingLeft="5dp"
                                    android:gravity="center_vertical"/>

                                <ImageView
                                    android:id="@+id/endDate_SEARCH_image"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@android:drawable/ic_menu_my_calendar"
                                    android:paddingLeft="10dp"/>

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Specific Option"
                            android:paddingLeft="5dp"
                            android:textColor="#333333"/>

                        <!--For Specific Option -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Times of Late"
                                android:paddingRight="10dp"
                                android:textColor="#333333"/>

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Earlier Leave"
                                android:textColor="#333333"/>

                        </LinearLayout>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="SEARCH"
                            android:background="#1976d2"
                            android:textColor="@color/white"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="01/01/2018"
                                android:textColor="#1976d2"
                                android:paddingRight="40dp"
                                android:gravity="left"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right">

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="LATE"
                                    android:textColor="@color/white"
                                    android:background="#f44f44" />

                            </RelativeLayout>

                        </LinearLayout>

                        <!--Time In-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="TIME IN"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textColor="#333333" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SCHEDULE"
                                    android:textColor="#333333"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="08:00"
                                    android:textColor="#333333"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ACTUAL"
                                    android:textColor="#333333"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="08:06"
                                    android:textColor="#333333"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DEVIATION"
                                    android:textColor="#333333"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0h 6m"
                                    android:textColor="#333333"/>
                            </LinearLayout>

                        </LinearLayout>

                        <!--Time Out-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="TIME OUT"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textColor="#333333"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SCHEDULE"
                                    android:textColor="#333333"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="17:00"
                                    android:textColor="#333333"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ACTUAL"
                                    android:textColor="#333333"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="17:10"
                                    android:textColor="#333333"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DEVIATION"
                                    android:textColor="#333333"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0h 10m"
                                    android:textColor="#333333"/>
                            </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/btnTo_ViewActivity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="View Activity"
                            android:background="@color/white"
                            android:textColor="#333333" />

                    </LinearLayout>

                    <!-- End of Linear Layout -->
                </LinearLayout>

                <!--End of Scrollview for Contain -->
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>